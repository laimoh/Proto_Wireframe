<div class="product-card stacked">

  <a href="{{ product.url }}" class="card-img"><img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.featured_image.alt }}"></a>
  <div class="card-content">
    <p class="product-title">{{ product.title }}</p>
    <p class="product-type">{{ product.type }}</p>
    <button class="product-buynow">
      <div class="pill-tiny"></div>
      <a class="link-text" class="">ADD TO BAG</a>
    </button>
    <p class="product-price">{{ product.price | money }}</p>
  </div>
</div>

