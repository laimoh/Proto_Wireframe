{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="login-content" x-data="{ loginForm: true, pwRecovery: false}">
   <div x-show="loginForm" class="login-form">
      <div class="title-group">
         <h1 class="page-title">Sign in</h1>
         <div class="forgotPW">
            <p @click="pwRecovery = true; loginForm = false" href="">Forgot Password?</p>
            <a href="{{ routes.account_register_url }}">Create an Account</a>
         </div>
      </div>
      <div class="input-area">
         {% form 'customer_login' %}
         <div class="field">
            <input id="email-address" name="customer[email]" type="email" autocomplete="email" role="textbox" placeholder="Email"
               contenteditable></input>
         </div>
         {% if form.password_needed %}
         <div class="field">
            <input id="password" name="customer[password]" type="password" autocomplete="current-password" role="textbox" placeholder="Password"
               contenteditable></input>
         </div>
         {% endif %}
         <button class="submit">
            <div class="pill-tiny"></div>
            <input type="submit" value="Enter" />
         </button>
         {% if form.errors %}
         <div class="error-form" role="alert">
            <strong class="error-title">Error  </strong>
            <p class="error-message">{{ form.errors | default_errors }}</p>
         </div>
      {% endif %}
         {% endform %}
      </div>
      </div>
      <div x-show="pwRecovery" class="recovery-form">
         <div class="title-group">
         <h1 class="page-title">Recover Your Password</h1>
         <div class="forgotPW">
            <p @click="pwRecovery = false; loginForm = true" href="">Back to Login</p>
         </div>
      </div>
         <div class="input-area">
         {% form 'recover_customer_password' %}
         <div class="email field">
            <input id="email" name="email" type="email" autocomplete="email" role="textbox" placeholder="Email"
               contenteditable></input>
         </div>
    
         <button class="submit">
            <div class="pill-tiny"></div>
            <input type="submit" value="Recover Password" />
         </button>
         {% if form.errors %}
         <div class="error-form" role="alert">
            <strong class="error-title">Error </strong>
           
            <p class="error-message">{{ form.errors | default_errors }}</p>
         </div>
      {% endif %}
         {% endform %}
      </div>
      </div>