<div
  id="CartDrawer"
  data-section-type="CartDrawer"
  aria-hidden="true">

  <div class="CartProducts">
    {% for item in cart.items %}
      {% render 'cart-item', item: item %}
    {% endfor %}
    <div class="CartSubtotal">
      <div class="Subtotal--price">
        <span>Subtotal</span>
        <div class="line"></div>
      </div>
      <span class="Subtotal--Money" data-ajax-price>{{ cart.total_price | money | remove: '.00' }}</span>
      <p>*shipping is included in the price</p>
    </div>

  </div>

</div>