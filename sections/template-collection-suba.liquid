<div data-section-type="collection" data-section-id="{{ section.id }}">
  {{ 'shop.css' | asset_url | stylesheet_tag }}
  <div class="filters-wrapper">
    {% render 'filter-suba' %}
  </div>

  <style>
    /*Using Inline Overwrites for faster Rendering | Hasaan @purplepandade */


.list-swatch{
  grid-template-columns: repeat(8, 1fr);
  gap: 10px;
   justify-items: center;
   align-items: center;
   padding-left: 0;

}

.list-swatch .filter-group-display__list-item{
  width: 90%;
  text-align: center;
}

.filter-group-display__list-item .checkbox-color+.swatch--color {
      width: 100%;
      height: 100%;
      display: block;
      background: var(--color);
      aspect-ratio: 1 / 1;
      border-radius: 200px;
      overflow: hidden;
      border: var(--lineThickness) solid black;
   }

   .filter-group-display__list-item.active .swatch--color {
      padding: 2px;
      border: var(--lineThickness) solid black;
      aspect-ratio: 1.2 / 2;
      transform: rotate(90deg);
   }


@media screen and (min-width: 1000px) {
  .product-grid{
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }},1fr)!important;
  }

  .card-content{
    aspect-ratio: 1 / 1;
  }

  .product-card{
    height: auto;
  }
}

@media screen and (max-width: 649px) {

   .list-color.suba{
      display: grid;
      grid-template-columns: repeat(6,1fr);
      justify-items: center;
      align-items: center;
      gap: 10px;
      padding: 1rem;
   }


   .list-swatch .filter-group-display__list-item{
      width: 50%;
      text-align: center;
   }

   .filter-group-display__list-item.active .swatch--color {
      padding: 2px;
      border: var(--lineThickness) solid black;
      aspect-ratio: 1.2 / 2;
      transform: rotate(90deg);
   }

   }
   /*DEBUG*/
   .remove {
   }

   .grow.suba{
    height: auto!important;
  }

  </style>


  {% paginate collection.products by 48 %}
    <div data-next-page class="product-grid grid-5-5">
    {% if collection.products.size == 0 %}
        <div class="no-product-wrapper">
          <p>Sorry, No products were found!</p>
          <div class="line"></div>
          <a href="{{ collection.url }}?sort_by={{ collection.sort_by }}">Try expanding your search</a>
        </div>
    {% endif %}
      {% for product in collection.products %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>

    <nav>
      {%- if paginate.previous -%}
        <a
          class="loadmorebtn"
          href="{{ paginate.previous.url }}"
        >
          PREVIOUS PAGE
        </a>
      {%- endif -%}
      {%- if paginate.next -%}
        <a
          class="loadmorebtn"
          href="{{ paginate.next.url }}"
        >
          NEXT PAGE
        </a>
      {%- endif -%}
    </nav>
  {% endpaginate %}
</div>
<script src="{{ 'shop.js' | asset_url }}" async></script>

{% schema %}
  {
    "name": "Collection Main",
    "settings": [
      {
        "type": "text",
        "id": "first_filter",
        "label": "First Filter",
        "default": "Size,size"
      },
    {
      "type": "text",
      "id": "second_filter",
      "label": "Second Filter",
      "default": "Color,color"

    },
    {
      "type": "range",
      "id": "columns",
      "label": "Column Count Desktop",
      "default": 5,
      "min": 1,
      "max": 6,
      "step": 1
    }
    ]
  }
{% endschema %}
